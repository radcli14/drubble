#:kivy 1.10.1

<SplashScreen>:
    canvas:
        Rectangle:
            source: 'figs/splash.png'
            pos: 0, 0
            size: root.width, root.height
        Color:
            rgba: (1,1,1,self.splash_fade)
        Rectangle:
            pos: 0, 0
            size: self.width, self.height


<MyBackground>:
    canvas:
        Rectangle:
            source: 'figs/bg0.png'
            pos: self.bg_left0, self.bottomLineHeight
            size: self.img_w, self.img_h
        Rectangle:
            source: 'figs/bg1.png'
            pos: self.bg_left1, self.bottomLineHeight
            size: self.img_w, self.img_h
        Color:
            rgba: (0,0,0,1)
        Rectangle:
            pos: (0,0)
            size: root.width, self.bottomLineHeight

