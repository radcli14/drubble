<ScoreLabel>:
    canvas:
        Color:
            rgba: (1,1,1,0.5)
        Rectangle:
            pos: (self.label_left, self.height-self.label_size-4)
            size: (0.19*root.width, root.label_size+4)
    Label:
        font_name: root.label_font
        text: root.label_text
        font_size: root.label_size
        halign: 'left'
        pos: (root.label_left, root.height-root.label_size-2)
        size: (0.19*root.width, root.label_size)
        color: (0, 0, 0, 1)

<OptionButtons>
    canvas:
        Color:
            rgba: (1,1,1,0.3)
        Rectangle:
            source: 'a/button.png'
            pos: self.pos
            size: self.width, self.height

