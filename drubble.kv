#:kivy 1.10.1

<SplashScreen>:
    canvas:
        Color:
            rgba: (1,1,1,self.splash_fade)
        Rectangle:
            pos: 0, 0
            size: self.width, self.height
    Image:
        source: 'figs/splash.png'
        pos: 0, 0.2*root.height
        size: 0.8*root.width, 0.8*root.height
    Label:
        font_size: 48
        pos: 0, 0
        size: root.width, 0.2*root.height
        text: 'Press Space to Begin'
        color: (0,0,0,root.text_alpha)

