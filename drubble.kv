#:kivy 1.10.1

<SplashScreen>:
    canvas:
        Rectangle:
            source: 'a/splash.png'
            pos: 0, 0
            size: root.width, root.height
        Color:
            rgba: (1,1,1,self.splash_fade)
        Rectangle:
            pos: 0, 0
            size: self.width, self.height

<MyBackground>:
    canvas:
        Color:
            rgba: (1,1,1,self.bg_alpha)
        Rectangle:
            texture: self.bg_text0
            pos: self.bg_left0, self.bottomLineHeight
            size: self.img_w, self.img_h
        Rectangle:
            texture: self.bg_text1
            pos: self.bg_left1, self.bottomLineHeight
            size: self.img_w, self.img_h
        Color:
            rgba: (0,0,0,self.bg_alpha)
        Rectangle:
            pos: (0,0)
            size: root.width, self.bottomLineHeight

<MyFace>:
    canvas:
        Color:
            rgba: (self.line_color[0], self.line_color[1], self.line_color[2], self.face_alpha)
        Line:
            points: self.line_list
            width: self.line_width
        Color:
            rgba: (1,1,1,self.face_alpha)
        Rectangle:
            source: self.jersey_source
            pos: self.jersey_left, self.jersey_bottom
            size: 0.6*self.sz, self.sz
        Rectangle:
            source: self.image_source
            pos: self.img_left, self.img_bottom
            size: self.sz, self.sz
        PushMatrix
        Rotate:
            angle: self.stool_angle
            origin: self.rotate_center
        Color:
            rgba: (self.stool_color[0], self.stool_color[1], self.stool_color[2], self.face_alpha)
        Rectangle:
            source: 'a/stool.png'
            pos: self.stool_left, self.stool_bottom
            size: self.stool_width, self.stool_height
        PopMatrix

<Ball>:
    canvas:
        Color:
            rgba: (1,1,1,0.5*self.ball_alpha)
        Line:
            points: self.trajectory
            width: 1
        Color:
            rgba: (1,1,1,self.ball_alpha)
        Ellipse:
            source: self.image_source
            pos: self.img_left, self.img_bottom
            size: self.sz, self.sz


