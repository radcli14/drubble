#:kivy 1.10.1

<SplashScreen>:
    canvas:
        Color:
            rgba: (1,1,1,self.splash_fade)
        Rectangle:
            pos: 0, 0
            size: self.width, self.height
    Image:
        source: 'figs/splash.png'
        pos: 0, 0.2*root.height
        size: 0.8*root.width, 0.8*root.height
    Label:
        font_size: 48
        pos: 0, 0
        size: root.width, 0.2*root.height
        text: 'Press Space to Begin'
        color: (0,0,0,root.text_alpha)

<MyBackground>:
    canvas:
        #Color:
        #    rgba: (0,0,0,1)
        Rectangle:
            source: 'figs/bg0.png'
            pos: self.bg_left0, self.bottomLineHeight
            size: self.img_w, self.img_h
        Rectangle:
            source: 'figs/bg1.png'
            pos: self.bg_left1, self.bottomLineHeight
            size: self.img_w, self.img_h
        Color:
            rgba: (0,0,0,1)
        Rectangle:
            pos: (0,0)
            size: root.width, root.height/20.0


